{
  "name": "electron",
  "version": "1.0.0",
  "description": "Desktop application for QuickNotes",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:next": "cd ../render && npm run dev",
    "dev:electron": "tsc && electron .",
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "build": "cd ../render && npm run build && cd ../electron && tsc",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux --config.directories.output=dist-linux",
    "dist": "npm run build && electron-builder --win --linux",
    "clean": "rimraf dist dist-linux"
  },
  "build": {
    "appId": "com.quick-notes.desktop",
    "productName": "QuickNotes",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/images/logo.png",
      "category": "Office"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      {
        "from": "../render/out",
        "to": "renderer",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/images/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "BoaVida XLSX",
      "installerIcon": "assets/images/logo.ico",
      "uninstallerIcon": "assets/images/logo.ico",
      "installerHeaderIcon": "assets/images/logo.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "concurrently": "^9.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}